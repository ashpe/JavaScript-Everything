.container
    .menubar
        a(href='#', style='text-decoration: none')= "ashleyp: "+title
        .items
            a(href='#')= "categories"
            a(href='#')= "about"
            a(href='#')= "github"
            a(href='#')= "twitter"
            a(href='#')= "contact"
        .login
            input(type='text', placeholder='username')
            input(type='password', placeholder='password')
            input(type='submit', value='login')
    .right-menubar
        h2 tags
        a(href='#')="cheese"
        a(href='#')="javascript"
        h2 archive
        a(href='#')="January 2012"
        a(href='#')="December 2011"
    - each obj, category in blogs
        each blog in obj
           .blog
               h1=blog.heading
               p=blog.content
               .footer
                  p posted by: <a href='#'>#{blog.posted_by}</a> @ 12/15/1950 9pm (Category: <a href='#'>#{category}</a>)

